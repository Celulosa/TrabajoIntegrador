      <table class="table table-responsive-md mb-0">
        <thead>
          <tr>
            <th style="width: 50px;">
              <strong>#</strong>
            </th>
            <th class="th-lg">
              <strong>Producto</strong>
            </th>
            <th class="th-lg ">
              <strong>Precio</strong>
            </th>
            <th class="text-center">
              <strong>Cantidad</strong>
            </th>
            <th class="text-center">
              <strong>Subtotal</strong>
            </th>
            <th style="width: 50px;"></th>
          </tr>
        </thead>
        <tbody class="cartRows">
        </tbody>
      </table>

    </section>
    <br>
    <br>
    <div class="col-sm-3 offset-sm-7 ">
      <div class="checkout">
        <div class="cart-total">
          <h2>
            <strong class="cart-total-title">Total</strong>
            <div class="cart-total-price">$ 0</div>
          </h2>
        </div>
      </div>

      <button class="btn btn-primary btn-purchase" onclick="setCarritoVacio()" type="submit">Vaciar Carrito</button> 
    </div>


    <div class="card">
      <div class="card-header text-center">
        Terminar la compra
      </div>
      <form class="card-body" id="checkoutCart">
        <div class="row">
          <div class=" col-md-6 mb-4">
            <label for="country">Direccion de Envio</label>
            <input type="text" placeholder="Calle 77 ..." name="direccion" value="" required />

          </div>
          <div class=" col-md-6 mb-4">
            <label for="country">Pago</label>
            <select class="custom-select d-block w-100" id="paymentMethod" name="paymentMethod" required="">
              <option value="">Elegir...</option>
              <option value="Efectivo">Efectivo</option>
              <option value="Débito">Tarjeta Débito</option>
              <option value="Crédito">Tarjeta Crédito</option>
            </select>


          </div>
          <button class="btn btn-primary btn-purchase" type="submit">Finalizar Compra</button>
         
         
        </div>

       
        <!--<button class="btn btn-primary btn-lg btn-block waves-effect waves-light" type="submit">Comprar</button>-->
      </form>
    </div>
